<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <TextView
       android:id="@+id/chat_tv_send_time"
       android:padding="5dp"
       android:background="@color/gray1"
       android:layout_gravity="center"
       android:text="2017/03/08 18:22"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

  <RelativeLayout
      android:id="@+id/chat_send_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/chat_iv_send_avatar"
         android:layout_alignParentTop="true"
         android:layout_alignParentRight="true"
         android:src="@mipmap/ic_launcher"
         android:layout_width="50dp"
         android:layout_height="50dp" />

     <TextView
         android:id="@+id/chat_tv_send_content"
         android:padding="15dp"
         android:background="@color/green"
         android:textColor="@color/bar_color"
         android:layout_marginRight="8dp"
         android:layout_marginLeft="30dp"
         android:text="1111"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/chat_iv_send_avatar" />
  </RelativeLayout>

    <TextView
        android:id="@+id/chat_tv_receive_time"
        android:padding="5dp"
        android:background="@color/gray1"

        android:layout_gravity="center"
        android:text="2017/03/08 18:22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/chat_receive_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chat_iv_receive_avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/chat_tv_receive_content"
            android:padding="15dp"
            android:background="@color/white"
            android:textColor="@color/bar_color"
            android:layout_marginLeft="8dp"
            android:text="1111"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/chat_iv_receive_avatar" />
    </RelativeLayout>

</LinearLayout>