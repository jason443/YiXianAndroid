<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title_text"/>

    <TextView
        android:background="@color/grey"
        android:padding="10dp"
        android:text="分组名字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_label_et_name"
        android:textColor="@color/bar_color"
        android:hint="未编辑分组名字"
        android:padding="10dp"
        android:background="@color/fake_while"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@color/grey"
        android:padding="10dp"
        android:text="分组成员"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:onClick="onAdd"
        android:padding="15dp"
        android:id="@+id/new_label_ll_add"
        android:background="@drawable/color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:src="@drawable/add_label"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textSize="15sp"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:text="添加成员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1.0px"/>

    <ListView
        android:id="@+id/new_label_lv_select_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>