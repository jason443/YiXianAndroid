<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jason.yixianandroid">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 执行SD卡检查的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- SD卡写入权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
        </activity>

        <!--登录模块-->
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--聊天模块-->
        <activity android:name=".activity.ChatActivity"
                android:launchMode="singleTask">
        </activity>

        <!--好友详情模块-->
        <activity android:name=".activity.FriendsDetailActivity">
        </activity>

        <!--标签模块-->
        <activity android:name=".activity.LabelActivity">
        </activity>

        <!--新建标签-->
        <activity android:name=".activity.NewLabelActivity">
        </activity>

        <!--标签详情模块-->
        <activity android:name=".activity.LabelDetailActivity">
        </activity>

        <!--设备绘图模块-->
        <activity android:name=".activity.EquipmentActivity">
        </activity>

        <!--选择联系人模块-->
        <activity android:name=".activity.AddMemberActivity">
        </activity>

        <!--添加朋友模块-->
        <activity android:name=".activity.AddFriendActivity">
        </activity>
    </application>

</manifest>